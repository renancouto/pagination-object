    "coveralls": "^2.11.2",
    "istanbul": "^0.3.10",
    "jshint": "^2.6.3",
    "mocha": "^2.2.1",
    "mocha-lcov-reporter": "0.0.2",
    "pre-commit": "^1.0.6"
  }
